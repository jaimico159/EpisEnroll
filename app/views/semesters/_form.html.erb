<div class="container-fluid">
	<%= bootstrap_form_for(@semester, model: semester, local: true, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |form| %>
		<% if semester.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(semester.errors.count, "error") %> contacts error:</h2>
				<ul>
				<% semester.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
				</ul>
			</div>
		<% end %>	

    <div class="row">
	    <div class="col-sm-2">
		    <%= form.label :Semestre_impar? %>
	    </div>
	    <div class="col-sm-10">
        <%= form.radio_button :is_even, true, label: "Si" %>
        <%= form.radio_button :is_even, false, label: "No" %>
	    </div>
    </div>

    <%= form.date_field :start_date, class: "input-group date", label: "Fecha de inicio:" %>
    <%= form.date_field :finish_date, class: "input-group date", label: "Fecha de cierre:" %>
    <%= form.text_field :backup, class: "form-control", label: "DescripciÃ³n:" %>

		<%= form.form_group do %>
			<% if current_page?(controller: 'semesters', action: 'new') %>
				<%= form.submit "Crear Semestre", :class => 'btn btn-dark' %>
			<% else %>
				<%= form.submit "Editar Semestre", :class => 'btn btn-dark' %>
			<% end %> 
		<% end %>
  <% end %>
</div>

