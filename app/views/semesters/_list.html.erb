<div class="container-fluid">
  <br>
  <table class="table table-bordered table-hover table-striped table-sm">
  <thead>
    <tr>
      <th scope="col">Semestre</th>
      <th scope="col">Inicio</th>
      <th scope="col">Fin</th>
      <th scope="col">Description</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    <% semesters.each do |semester| %>
      <tr>
        <th scope="row"><%= (semester.is_even ? "impar": "par") %></th>
        <td><%= semester.start_date %></td>
        <td><%= semester.finish_date %></td>
        <td><%= semester.backup %></td>
        <td>
            <div class="dropdown">
                <button type="button" class="btn btn-dark btn-sm dropdown-toggle" data-toggle="dropdown">Actions</button>
                <div class="dropdown-menu">
                    <%= link_to "View", semester, :class => "dropdown-item" %>
                    <%= link_to "Edit", edit_semester_path(semester), :class => "dropdown-item" %>
                    <%= link_to "Delete", semester, method: :delete, data: { confirm: "Â¿Deseas eliminar semestre ?" }, :class => "dropdown-item" %>
                </div>
            </div>
        </td>
      </tr>    
    <% end %>
  </tbody>
</table>