<div class="dropdown-divider"></div>
<div class="container-fluid">
  <div class="row">
  <div class="col-lg-9"><h1>Validating PDF</h1></div>
  <div class="col-lg-3"><%= link_to 'Back', :back, :class => 'btn btn-info'%></div>
  </div>
</div>

<div class="dropdown-divider"></div>

<% unless @student.certificate_uploaded %>
  <%= form_with url: students_validate_path do |form|%>

    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%= form.label :Constancia%></div>
        <div class="col-sm-10"><%= form.file_field :pdf %></div>
      </div>
      <div class="row">
        <div class="col-sm-2"><%= form.label :dni %></div>
        <div class="col-sm-10"><%= form.number_field :dni, min: "11111111", max: "99999999"%></div>
      </div>
      
    </div>
  
    <div class="dropdown-divider"></div>
    <div align='center'><%= form.submit 'VALIDATE', :class => 'btn btn-dark' %>

    
  <% end %>
<% else %>
  <h2>No deberias entrar aquí, tu certificado es válido<h2>
<% end %>