<%= @student.unsa_full_name %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Code</th>
      <th scope="col">Name</th>
      <th scope="col">Group</th>
      <th scope="col">Enrolled</th>
    </tr>
  </thead>
  <tbody>
    <% if @chosen_labs %>
    <% @chosen_labs.each do |chosen_lab| %>
      <tr>
        <th scope="row"><%= chosen_lab.course.code %></th>
        <td><%= chosen_lab.course.name %></td>
        <td><%= chosen_lab.group.name %></td>
        <td>Already Enrolled</td>
      </tr>    
    <% end %>
    <% end %>
    <% if @courses %>
    <% @courses.each do |course| %>
      <%= form_with url: students_enroll_student_path do |form|%>
      <tr>
        <%= form.hidden_field :course_id, value: course.id, required: true %>
        <th scope="row"><%= course.code %></th>
        <td><%= course.name %></td>
        <td><%= form.collection_select(:group_id, course.available_laboratories, :first, :second) %></td>
        <td><%= form.submit 'ENROLL', class: 'btn btn-primary' %></td>
      </tr>
      <% end %>    
    <% end %>
    <% end %>
  </tbody>
</table>