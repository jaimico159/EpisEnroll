<div class="dropdown-divider"></div>
<div class="container-fluid">
  <h3>CURSOS</h3>
</div>
<div class="dropdown-divider"></div>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-10" ><h4 class="text-info" ><%= @course.name %><h4></div>
  </div>
  <div class="row">
    <div class="col-sm-2" > <strong>Nombre:</strong> </div>
    <div class="col-sm-10"> <%= @course.name %> </div>
  </div>
  <div class="row">
    <div class="col-sm-2" > <strong>Codigo:</strong> </div>
    <div class="col-sm-10"> <%= @course.code %> </div>
  </div>
  <div class="row">
    <div class="col-sm-2" > <strong>¿Tiene laboratorio?</strong> </div>
    <div class="col-sm-10"> <%= @course.has_laboratory %> </div>
  </div>
  <div class="row">
    <div class="col-sm-2" > <strong>Descripcion:</strong> </div>
    <div class="col-sm-10"> <%= @course.description %> </div>
  </div>
  <div class="row">
  <div class="col-sm-2" > <strong>Creado:</strong> </div>
  <div class="col-sm-10"> <%= @course.created_at %> </div>
  </div>
  <div class="row">
    <div class="col-sm-2" > <strong>Modificado:</strong> </div>
    <div class="col-sm-10"> <%= @course.updated_at %> </div>
  </div>
  <div class="row">
    <div class="col-sm-2" > <strong>Status:</strong> </div>
    <div class="col-sm-10"> <%= @course.status %> </div>
  </div>

</div>
<div class="dropdown-divider"></div>
<div class="container-fluid">
  <%= link_to 'Atrás', courses_path, :class => "btn btn-info" %>
  <%= link_to 'Editar', edit_course_path(@course), :class => "btn btn-secondary" %>
</div>