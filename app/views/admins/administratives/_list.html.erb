<div class="container-fluid">
  <br>
  <table class="table table-bordered table-hover table-striped table-sm">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Status</th>
      <th scope="col">Role</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    <% @administratives.each do |admin| %>
      <tr>
        <td><%= link_to admin.full_name, admins_administrative_path(admin) %></td>
        <td><%= admin.status %></td>
        <td><%= admin.admin_role %></td>
        <td>
            <div class="dropdown">
                <button type="button" class="btn btn-dark btn-sm dropdown-toggle" data-toggle="dropdown">Actions</button>
                <div class="dropdown-menu">
                    <%= link_to "View", admin, :class => "dropdown-item" %>
                    <%= link_to "Edit", edit_admins_administrative_path(admin), :class => "dropdown-item" %>
                    <%= link_to "Delete", admin, method: :delete, data: { confirm: "Â¿Deseas eliminar al administrador?" }, :class => "dropdown-item" %>
                </div>
            </div>
        </td>
      </tr>    
    <% end %>
  </tbody>
</table>