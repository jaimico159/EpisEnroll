                                        <div class="col-sm-3 col-md-2 col-5">
                                            <label style="font-weight:bold;">Nombres</label>
                                        </div>
                                        <div class="col-md-8 col-6">
                                            <%= @admin.first_name %>
                                        </div>
                                    </div>
                                    <hr />

                                    <div class="row">
                                        <div class="col-sm-3 col-md-2 col-5">
                                            <label style="font-weight:bold;">Apellidos</label>
                                        </div>
                                        <div class="col-md-8 col-6">
                                            <%= @admin.last_name %>
                                        </div>
                                    </div>
                                    <hr />

                                    <div class="row">
                                        <div class="col-sm-3 col-md-2 col-5">
                                            <label style="font-weight:bold;">Estado</label>
                                        </div>
                                        <div class="col-md-8 col-6">
                                            <%= @admin.status %>
                                        </div>
                                    </div>
                                    <hr />
                                        
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
