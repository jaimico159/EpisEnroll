<div class="container-fluid">
  <br>
  <table class="table table-bordered table-hover table-striped table-sm">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Status</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    <% admins.each do |admin| %>
      <tr>
        <td><%= admin.full_name %></td>
        <td><%= admin.status %></td>
        <td>
            <div class="dropdown">
                <button type="button" class="btn btn-dark btn-sm dropdown-toggle" data-toggle="dropdown">Actions</button>
                <div class="dropdown-menu">
                    <%= link_to "View", admin, :class => "dropdown-item" %>
                    <%= link_to "Edit", edit_admin_path(admin), :class => "dropdown-item" %>
                    <%= link_to "Delete", admin, method: :delete, data: { confirm: "Â¿Deseas eliminar al administrador?" }, :class => "dropdown-item" %>
                </div>
            </div>
        </td>
      </tr>    
    <% end %>
  </tbody>
  </table>
</div>