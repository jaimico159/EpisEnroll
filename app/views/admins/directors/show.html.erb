<div class="dropdown-divider"></div>
<div class="container-fluid">
  <h3>Mostrando Director</h3>
</div>
<div class="dropdown-divider"></div>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-10" ><h4 class="text-info" ><%= @director.full_name %><h4></div>
    </div>
    <div class="row">
        <div class="col-sm-2" > <strong>Nombres: </strong> </div>
        <div class="col-sm-10"> <%= @director.first_name %></div>
    </div>
    <div class="row">
        <div class="col-sm-2" > <strong>Apellidos: </strong> </div>
        <div class="col-sm-10"> <%= @director.last_name %></div>
    </div>
    <div class="row">
        <div class="col-sm-2" > <strong>Email: </strong> </div>
        <div class="col-sm-10"> <%= @director.email %></div>
    </div>
    <div class="row">
        <div class="col-sm-2" > <strong>Estado: </strong> </div>
        <div class="col-sm-10"> <%= @director.status %></div>
    </div>
    <div class="row">
        <div class="col-sm-2" > <strong> Rol: </strong> </div>
        <div class="col-sm-10"> <%= @director.admin_role %></div>
    </div>
    <div class="row">
        <div class="col-sm-2" > <strong>Descripción: </strong> </div>
        <div class="col-sm-10"> <%= @director.description %></div>
    </div>
</div>
<div class="dropdown-divider"></div>
<div class="container-fluid">
    <%= link_to 'Atrás', admins_directors_path, :class => "btn btn-info" %>
    <%= link_to 'Editar', edit_admin_path(@director), :class => "btn btn-secondary" %>
    <%= link_to "Eliminar Director", @director, method: :delete, data: { confirm: "¿Desea eliminar al director?" }, :class => "btn btn-danger" %>
</div>
