<div class="container-fluid">
	<%= bootstrap_form_for(@director, model: [:admins, director], url: director.new_record? ? admins_directors_path : admins_director_path, local: true, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |form| %>
		<% if director.errors.any? %>
    	<div id="error_explanation">
      	<h2><%= pluralize(director.errors.count, "error") %> contacts error:</h2>
      	<ul>
      	<% director.errors.full_messages.each do |message| %>
        	<li><%= message %></li>
      	<% end %>
      	</ul>
    	</div>
  	<% end %>
	
		<%= form.text_field :first_name, label: "Nombres:" %>
		<%= form.text_field :last_name, label: "Apellidos:" %>




		<div class="row">	
			<div class="col-sm-2">
				<%= form.label :role %>
			</div>
			<div class="col-sm-10">
				<div class="custom-control custom-radio">
					<input type="radio"  id="Director" name="defaultExampleRadios" checked disabled>
					<label for="Director">Director</label>
				</div>
			</div>
		</div>
		
		

		<%= form.text_field :description, label: "DescripciÃ³n:" %>
		<%= form.text_field :email, label: "Email:" %>
		<%= form.form_group do %>
			<%= form.submit :class => 'btn btn-dark' %>
		<% end %>
	<% end %>
</div>