<div class="container-fluid">
  <table class="table table-bordered table-hover table-striped table-sm">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Valor</th>
      <th scope="col">Inicio</th>
      <th scope="col">Fin</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Opciones</th>
    </tr>
  </thead>
  <tbody>
    <% clasifications.each do |clasification| %>
      <tr>
        <th scope="row"><%= clasification.name %></th>
        <td><%= clasification.value %></td>
        <td><%= clasification.start_date %></td>
        <td><%= clasification.finish_date %></td>
        <td><%= clasification.description %></td>
        <td>
            <div class="dropdown">
                <button type="button" class="btn btn-dark btn-sm dropdown-toggle" data-toggle="dropdown">Acciones</button>
                <div class="dropdown-menu">
                    <%= link_to "Ver", clasification, :class => "dropdown-item" %>
                    <%= link_to "Editar", edit_clasification_path(clasification), :class => "dropdown-item" %>
                    <%= link_to "Eliminar", clasification, method: :delete, data: { confirm: "Â¿Desea eliminar este semestre?" }, :class => "dropdown-item" %>
                </div>
            </div>
        </td>
      </tr>    
    <% end %>
  </tbody>
</table>